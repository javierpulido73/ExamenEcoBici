<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_h1"
                android:layout_marginTop="@dimen/margin_h3"
                android:layout_marginRight="@dimen/margin_h1"
                android:layout_marginBottom="@dimen/margin_h3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:text="EcoBicis"
                        android:textColor="@android:color/black"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_h10" />

                    <TextView
                        android:id="@+id/tvDisponibles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:text="#Nombre"
                        android:textColor="@android:color/black"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_h10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:text="Espacios"

                        android:textColor="@android:color/black"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_h10" />

                    <TextView
                        android:id="@+id/tvEspacios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:text="#Nombre"
                        android:textColor="@android:color/black"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_h10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="75"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_h2"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="90">

                        <TextView
                            android:id="@+id/nombreTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="center"
                            android:text="#Nombre prueba"
                            android:textColor="@android:color/black"
                            android:textIsSelectable="true"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_h10" />

                        <TextView
                            android:id="@+id/direccionTv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:text="#DirecciÃ³n"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/text_h10" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

</LinearLayout>